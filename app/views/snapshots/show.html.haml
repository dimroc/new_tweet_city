.floating-header
  .begins= l @snapshot.begins_at, format: :human
  .ends= l @snapshot.ends_at, format: :human
  .count= "Tweets: #{@snapshot.tweet_count}"
  - if @previous
    = link_to snapshot_path(@previous) do
      %i{class: "icon-chevron-left"}
  - else
    %i{class: "icon-chevron-left"}

  - if @next
    = link_to snapshot_path(@next) do
      %i{class: "icon-chevron-right"}
  - else
    %i{class: "icon-chevron-right"}

= image_tag @snapshot.url
