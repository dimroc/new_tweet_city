%li{class: ["tweet", "tweet_#{tweet.id}"]}
  %i{class: %w(icon-twitter)}
  .neighborhood.label.label-info= tweet.neighborhood.name
  .date.label.label-success #{l(tweet.created_at, format: :long)}
  .body
    = image_tag tweet.profile_image_url, class: 'profile_image'
    .content
      %blockquote.text
        %h5.screen_name= link_to "@#{tweet.screen_name}", "http://www.twitter.com/#{tweet.screen_name}"
        = Rinku.auto_link(tweet.text, :all, 'target="_blank"').html_safe
      - if tweet.media_url
        .media= image_tag tweet.media_url
